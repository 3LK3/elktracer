    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'elktracer_cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=elktracer_cli",
                    "--package=elktracer_cli"
                ],
                "filter": {
                    "name": "elktracer_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'elktracer_cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=elktracer_cli",
                    "--package=elktracer_cli"
                ],
                "filter": {
                    "name": "elktracer_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'elktracer_core'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=elktracer_core"
                ],
                "filter": {
                    "name": "elktracer_core",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'elktracer_editor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=elktracer_editor",
                    "--package=elktracer_editor"
                ],
                "filter": {
                    "name": "elktracer_editor",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_BACKTRACE": "full"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'elktracer_editor'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=elktracer_editor",
                    "--package=elktracer_editor"
                ],
                "filter": {
                    "name": "elktracer_editor",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}